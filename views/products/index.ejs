<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="row">
    <% for(let item of products){ %>

    <div class="col-lg-3 mt-3">
        <div class="card shadow mx-auto border border-dark rounded" style="width: 18rem;--bs-border-opacity: .5;--bs-link-hover-color-rgb: 25, 135, 84;">
            <img src="<%=item.img%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h2 class="card-title"><%=item.name%></h5>
                <span class="btn like-btn" product-id="<%= item._id%>">
                <% if(currentUser && currentUser.wishList.includes(item._id)){ %>
                  <i class="fas fa-heart"></i>
                  <% } else{ %>
                    <i class="far fa-heart"></i>
                    <% } %>
                  </span>
              <h5 class="card-title"><%=item.price%></h5>
              <p class="card-text"><%=item.description%></p>
              <a href="/products/<%=item._id%>" class="btn btn-info">View Product</a>
              <% if(currentUser && currentUser.role === 'seller'){ %>
              <form class= "d-inline-block"action="/product/<%=item._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">DELETE</button>
              </form>
              <% } %>
            </div>
        </div>
    </div>
    <% } %>
</div>
<script src="/js/common.js"></script>
</body>
</html>